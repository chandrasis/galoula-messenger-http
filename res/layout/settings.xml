<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"><ScrollView android:id="@+id/ScrollView01" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginBottom="60px">
<TableLayout android:id="@+id/TableLayout01" android:layout_height="wrap_content" android:padding="5px" android:layout_width="fill_parent"><TextView android:layout_height="wrap_content" android:id="@+id/strLiveID" android:text="Windows Live ID:" android:layout_width="fill_parent"></TextView><EditText android:layout_height="wrap_content" android:id="@+id/editLiveID" android:layout_width="fill_parent"></EditText><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Password:" android:id="@+id/strPassword"></TextView><EditText android:layout_height="wrap_content" android:id="@+id/editPassword" android:layout_width="fill_parent" android:password="true"></EditText><CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Remember Live ID &amp; Password" android:id="@+id/checkRememberlive"></CheckBox><CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/checkDownloadDP" android:layout_below="@+id/checkRememberlive" android:text="Download display picture if available (experimental)"></CheckBox><CheckBox android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ignore stock pictures" android:layout_below="@+id/checkDownloadDP" android:id="@+id/checkIgnoreStockDP"></CheckBox></TableLayout>
</ScrollView>

<Button android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:id="@+id/btnSave" android:text="Save" android:layout_width="125sp" android:layout_marginLeft="5px" android:layout_marginBottom="5px"></Button>
<Button android:layout_height="wrap_content" android:id="@+id/btnDiscard" android:layout_alignParentBottom="true" android:layout_alignParentRight="true" android:layout_width="125sp" android:text="Cancel" android:layout_marginRight="5px" android:layout_marginBottom="5px"></Button>

</RelativeLayout>
